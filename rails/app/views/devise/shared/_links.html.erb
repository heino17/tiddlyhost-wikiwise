<div class="px-3 pt-0 pb-3 small">
  <%= turbo_off_link_to t('shared_links_cancel'), root_path %><br />

  <%- if controller_name != 'sessions' %>
    <%= turbo_off_link_to t('shared_links_login'), new_session_path(resource_name) %><br />
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= turbo_off_link_to t('shared_links_sign_up'), new_registration_path(resource_name) %><br />
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= turbo_off_link_to t('shared_links_forgot_password'), new_password_path(resource_name) %><br />
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= turbo_off_link_to t('shared_links_resend_confirmation'), new_confirmation_path(resource_name) %><br />
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= turbo_off_link_to t('shared_links_resend_unlock'), new_unlock_path(resource_name) %><br />
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= turbo_off_link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %><br />
    <% end %>
  <% end %>
</div>
