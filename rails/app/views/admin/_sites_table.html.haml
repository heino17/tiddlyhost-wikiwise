%thead
  %tr
    %th= sort_link t('admin.tab_sites_table_headers.th_id'), :asc
    %th= sort_link t('admin.tab_sites_table_headers.th_name'), :asc
    %th
    - unless params[:kind]
      %th= sort_link t('admin.tab_sites_table_headers.th_kind')
    %th= t('admin.tab_sites_table_headers.th_empty')
    %th= sort_link t('admin.tab_sites_table_headers.th_clone')
    %th= sort_link t('admin.tab_sites_table_headers.th_version')
    %th= sort_link t('admin.tab_sites_table_headers.th_description'), :asc
    - unless params[:private]
      %th= sort_link t('admin.tab_sites_table_headers.th_private')
    - unless params[:hub]
      %th= sort_link t('admin.tab_sites_table_headers.th_hub')
    - unless params[:template]
      %th= sort_link t('admin.tab_sites_table_headers.th_template')
    %th= sort_link t('admin.tab_sites_table_headers.th_iframes')
    %th= sort_link t('admin.tab_sites_table_headers.th_put')
    %th= sort_link t('admin.tab_sites_table_headers.th_upload')
    %th= sort_link t('admin.tab_sites_table_headers.th_views')
    %th= sort_link t('admin.tab_sites_table_headers.th_accesses')
    %th= sort_link t('admin.tab_sites_table_headers.th_saves')
    %th= sort_link t('admin.tab_sites_table_headers.th_clones')
    %th= sort_link t('admin.tab_sites_table_headers.th_versions')
    - unless specific_user
      %th= sort_link t('admin.tab_sites_table_headers.th_owner')
    %th= sort_link t('admin.tab_sites_table_headers.th_raw')
    %th= 'Blob'
    %th= sort_link t('admin.tab_sites_table_headers.th_storage'), :asc
    %th= sort_link t('admin.tab_sites_table_headers.th_last_access')
    %th= sort_link t('admin.tab_sites_table_headers.th_last_update')
    %th= sort_link t('admin.tab_sites_table_headers.th_created')

%tbody
  - records.each do |site|
    %tr
      %td= site.id
      %td= admin_site_link site
      %td= render 'thumbnail_link', site: site
      - unless params[:kind]
        %td= site.tw_kind
      %td= site.empty.name
      %td= site.cloned_from ? admin_site_link(site.cloned_from) : site.cloned_from_id
      %td= site.tw_version
      %td.nowrap.text-truncated{ style: 'max-width: 8em;' }
        = span_with_title site.description
      - unless params[:private]
        %td= bool_text site.is_private?
      - unless params[:hub]
        %td= bool_text site.is_searchable?
      - unless params[:template]
        %td= bool_text site.allow_public_clone?
      %td= bool_text site.allow_in_iframe?
      %td= bool_text site.prefer_put_saver?
      %td= bool_text site.prefer_upload_saver?
      %td= site.view_count
      %td= site.access_count
      %td= site.save_count
      %td= site.clone_count
      %td= render 'versions_dropdown', site: site
      - unless specific_user
        %td= link_to_user_sites(site.user.username_or_email, site.user)
      %td= nice_byte_count site.raw_byte_size
      %td= nice_byte_count site.blob_byte_size
      %td= display_storage_service site
      %td= nice_timestamp site.accessed_at
      %td= nice_timestamp site.blob_created_at
      %td= nice_timestamp site.created_at
