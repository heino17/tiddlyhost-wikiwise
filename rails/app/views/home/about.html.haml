%h1= t('site_heading_about')

%p
  = image_tag 'logo-800-square.png', class: 'rounded',
    style: 'width: 120px; height: 120px; float: left; margin: 0.5em 1em 0.5em 0;'

%p
  = t('site_text_about').html_safe

%p
  = t('site_text2_about').html_safe

%ul.about-links
  %li<
    = link_to '/support' do
      = bi_icon('life-preserver')
      = t('about_links_support')

  %li<
    = link_to Settings.faq_url do
      = bi_icon('patch-question')
      = t('about_links_faq')

  %li<
    = link_to Settings.docs_url, target: '_blank' do
      = bi_icon('file-text')
      = t('about_links_documentation')
  
  %li<
    = link_to Settings.blog_url, target: '_blank' do
      = bi_icon('newspaper')
      = t('about_links_blog')

  %li<
    = link_to Settings.twitterx_url, target: '_blank' do
      = bi_icon('twitter-x')
      = t('about_links_x')

  %li<
    = link_to '/terms-of-use' do
      = bi_icon('file-earmark-text')
      = t('about_links_terms')

  %li<
    = link_to '/privacy-policy' do
      = bi_icon('file-earmark-text')
      = t('about_links_privacy')

  %li<
    = link_to Settings.license_url, target: '_blank' do
      = bi_icon('file-earmark-check')
      = t('about_links_license')

  %li<
    = link_to Settings.github_url do
      = bi_icon('gem')
      = t('about_links_source')

  %li<
    = link_to '/donate' do
      = bi_icon('piggy-bank')
      = t('about_links_donate')

%table.m-2.p-1
  %tr
    %td.p-1.pe-3.text-muted
      = t('about_hint_version')
    %td.p-1
      = Settings.app_version

  = render "admin_about", build_info: @build_info

  %tr
    %td.pt-4.p-1.pe-3.text-muted.align-top
      = t('about_hint_empty_versions')
