{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:best-practices',
    ':semanticPrefixChore',
    'schedule:monthly',
  ],
  baseBranchPatterns: [
    'wikiwise-local-translation',
  ],
  ignoreBranches: [
    'main',
  ],
  dependencyDashboard: true,
  dependencyDashboardTitle: '⬆️ Wikiwise Dependency Dashboard',
  packageRules: [
    {
      matchManagers: [
        'bundler',
      ],
      matchUpdateTypes: [
        'patch',
        'pin',
        'digest',
      ],
      groupName: 'ruby patch + pin updates',
      automerge: true,
      automergeType: 'branch',
    },
    {
      matchManagers: [
        'bundler',
      ],
      matchUpdateTypes: [
        'minor',
      ],
      groupName: 'ruby minor updates',
      automerge: false,
    },
    {
      matchManagers: [
        'bundler',
      ],
      matchUpdateTypes: [
        'major',
      ],
      enabled: false,
    },
    {
      matchManagers: [
        'yarn',
      ],
      enabled: false,
    },
    {
      matchDatasources: [
        'docker',
      ],
      pinDigests: true,
      matchUpdateTypes: [
        'patch',
        'pin',
        'digest',
      ],
      automerge: true,
    },
    {
      matchDatasources: [
        'docker',
      ],
      matchPackageNames: [
        'sbaird/tiddlyhost-base',
      ],
      enabled: false,
    },
  ],
}
